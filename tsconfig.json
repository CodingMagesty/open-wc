{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    // "noEmit": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true,
  },
  "files": [
    "browser.d.ts"
  ],
  "include": [
    "packages/testing-helpers"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/coverage/*",
    "packages/create/src/generators/*/templates/**/*",
    "packages/webpack-index-html-plugin/demo/**/*",
    "packages/building-utils/test/custom-polyfils/**/*",
    "**/dist/**/*",
    "packages/**/test/**/snapshots",
    "packages/owc-dev-server/**/*",
    "packages/es-dev-server/test/fixtures/**/*",
    "packages/es-dev-server/demo/**/*",
    "packages/es-dev-server/**/*",
    "packages/semantic-dom-diff/**/*",
    "packages/create/**/*",
  ]
}
